rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper: Check if user is an admin
    // NOTE: This requires the user document to exist and have role: 'admin'
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users Collection
    // - Authenticated users can read their own profile
    // - Admins can read ALL profiles (needed for user management)
    // - Anyone authenticated can create a user doc (Registration)
    // - Owners and Admins can update
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Students Collection
    match /students/{studentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // General fallback for development (Allow authenticated users to access other collections)
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
